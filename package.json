{
  "name": "wordflow-prd-editor",
  "version": "1.0.0",
  "description": "基于 React Flow 和 Chakra UI 的 WordFlow PRD 编辑器",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "predeploy": "echo > dist/.nojekyll",
    "deploy": "gh-pages -d dist",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm run dev:frontend\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder build --config electron-builder.json",
    "electron:pack": "npm run build && electron-builder build --dir --config electron-builder.json",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@types/react-router-dom": "^5.3.3",
    "@uiw/react-md-editor": "^4.0.8",
    "axios": "^1.12.0",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.543.0",
    "mermaid": "^11.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-feather": "^2.0.10",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^7.8.2",
    "reactflow": "^11.10.1",
    "rehype-highlight": "^7.0.2",
    "rehype-mermaid": "^3.0.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "unist-util-visit": "^5.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fs-extra": "^11.3.1",
    "gh-pages": "^6.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "wait-on": "^7.2.0"
  },
  "keywords": [
    "react",
    "react-flow",
    "chakra-ui",
    "prd",
    "editor",
    "flowchart"
  ],
  "author": "DevBuddy",
  "license": "MIT"
}
